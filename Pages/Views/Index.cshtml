@page
@model Upbeat.Pages.Views.IndexModel

@{
    ViewData["Title"] = "Upbeat Music";
}

<style>
    body {
        background-color: white;
    }

    a:hover {
        color: darkred;
    }

    h1 {
        color: #F03939;
    }

    th {
        color: #F03939;
    }
</style>

<h1 class="text-center">Upbeat Song Tracker</h1>

<p>
    <a asp-page="Create">Add New Song</a>
</p>
<table class="pure-table pure-table-bordered pure-table-striped">
    <thead>
        <tr class="pure-table-odd">
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Songs[0].DurationTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Songs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
