@page
@model Upbeat.Pages.Views.DetailsModel

@{
    ViewData["Title"] = "Details";
}



<h1 class="text-center">Current Song Details</h1>

<div class="row" >
    <h4>@Model.Songs.Title by: @Model.Songs.Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Songs.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Songs.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Songs.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Songs.Artist)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Songs.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Songs.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Songs.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Songs.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Songs.DurationTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Songs.DurationTime)
        </dd>
    </dl>
</div>
<div>
    <a class="pure-button pure-button-save" asp-page="./Edit" asp-route-id="@Model.Songs.ID">Edit</a> |
    <a class="pure-button pure-button-back" asp-page="./Index">Back to List</a>
</div>
